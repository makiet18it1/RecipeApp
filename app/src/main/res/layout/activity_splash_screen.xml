<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".login.SplashScreen"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp"
    tools:ignore="MissingConstraints">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="@dimen/_40sdp"
        android:fontFamily="@font/dibble"
        android:text="Recipes Ideal"
        android:textColor="@color/text"
        android:textSize="@dimen/_60sdp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_img_splash"
        android:layout_marginVertical="@dimen/_40sdp"
        android:layout_gravity="center"
        />

    <Button
        android:id="@+id/btnStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Start"
        android:fontFamily="@font/maianbo"
        android:layout_gravity="center"
        android:textSize="@dimen/_20sdp"
        android:background="@drawable/ic_btn_login"/>


</LinearLayout>